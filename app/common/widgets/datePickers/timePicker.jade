span(uib-dropdown auto-close="outsideClick" is-open="$ctrl.isOpen")
    p.input-group
        input.form-control(ng-model="$ctrl.field" uib-datepicker-popup="shortTime")
        span.input-group-btn
            button.btn.btn-default(uib-dropdown-toggle type="button" id="dateDropDown" style="padding-left: 5px")
                i.glyphicon.glyphicon-time(style="margin-left: 7px;")
            div.timerPickerDropDown(uib-dropdown-menu style="padding: 10px")
                uib-timepicker(ng-model="$ctrl.field")
                a(href="" ng-click="$ctrl.isOpen = !$ctrl.isOpen") Done