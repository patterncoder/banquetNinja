.detailForm
    detail-header
    .detailContent(layout="row" flex)
        div.detailLeftPanel(flex layout="column")
            div.detailLeftPanelContainer(layout-fill)
                div.detailTopPanel(layout-padding)
                    form(name="vm.detailForm")
                        div(flex layout="row")
                            div(flex="80" align-content="flex-start" layout="column")
                                div(layout="row")
                                    .form-group(flex="48")
                                        label.control-label(for="name") First Name
                                        input.form-control(ng-model="vm.docSvc.doc.firstName" )
                                    .form-group(flex="48")
                                        label.control-label(for="description") Last Name
                                        input.form-control(ng-model="vm.docSvc.doc.lastName" )
                div.detailSection(layout-padding)
                    md-tabs(md-dynamic-height  layout="column" md-selected="vm.tabIndex")
                        md-tab( label="User Profile")
                            div(layout="row" flex layout-fill layout-padding)
                                div(flex="90" align-content="flex-start" layout="column")
                                    .form-group(flex="90")
                                        label.control-label(for="title") Username
                                        input.form-control(ng-model="vm.docSvc.doc.username")
                                        {{vm.docSvc.doc.roles}}
                                    ninja-grid(no-data-text="User needs a role" 
                                            grid-title="Roles" 
                                            doc-svc="vm.docSvc" 
                                            list="vm.docSvc.doc.roles" 
                                            create-method="addRole" 
                                            update-method="updateRole" 
                                            delete-method="removeRole"
                                            add-toggle="vm.sideTab.roles")
                div.detailRightPanel(flex="20" ng-show="vm.sideTab.roles && vm.tabIndex == 0" layout-padding)
                                //- include ./tabs/addFood.jade
                                div(layout="row" layout-align="end start")
                                    md-button( ng-click="vm.sideTab.menuItems = !vm.sideTab.menuItems") Close
                                div(layout="row" )
                                    div()
                                        h3 Add Role to User
                                        a(ui-sref="root.user") Add use role
                                        lookups(tm-data-source="User" doc-list="vm.userDocSvc.doc.roles" list="root" doc-service-add-method="userDocSvc.addRole")
                                            div.itemCard(style="border: solid black 1px; background-color: white")
                                                a(href="" ng-click="dCtrl.addItem(item)") 
                                                    span.glyphicon.glyphicon-circle-arrow-left 
                                                span &nbsp; {{item.name}}
    
                                                                            
