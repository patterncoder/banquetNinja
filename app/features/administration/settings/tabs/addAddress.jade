        p Address Type 
        select.form-control(ng-model = "vm.nwAddress.addressType")
            option(value="subscriptionBilling") Billing
            option(value="headquarters") Headquarters 
            option(value="additionalLocation") Additional Location
        br 
        select.form-control(ng-model="vm.nwAddress.primary")
            option(value="true") Primary Address
