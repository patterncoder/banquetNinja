        p Address 1
        input.form-control(ng-model="vm.nwAddress.address1")
        p Address 2
        input.form-control(ng-model="vm.nwAddress.address2")
        p City 
        input.form-control(ng-model="vm.nwAddress.city")
        p State 
        input.form-control(ng-model="vm.nwAddress.state")
        p Zip 
        input.form-control(ng-model="vm.nwAddress.zip")
