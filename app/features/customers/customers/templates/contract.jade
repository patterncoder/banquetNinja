md-dialog(aria-lable="Add Contract")
    md-toolbar(layout-padding)
        div.md-tooolbar-tools
            h4 {{vm.dialogOptions.headerText}}
    md.dialog-content(layout-padding)
        div(style="min-width: 600px")
            form.form-horizontal(name="addDocPartForm")
                .form-group(ng-class="{'has-error': vm.validationError.errors['title'].kind }")
                    label.col-sm-3.control-label(for="eventName") Event Name
                    div.col-sm-9
                        input.form-control(name="eventName" ng-model="vm.item.title" placeholder="Event Name")
                        span.help-block(id="eventName-helpBlock" ng-show="vm.validationError.errors['title'].kind") {{vm.validationError.errors['title'].message}}
                .form-group(ng-class="{'has-error': vm.validationError.errors['date'].kind }")
                    label.col-sm-3.control-label(for="eventDate") Event Date
                    div.col-sm-9
                        md-datepicker( ng-model="vm.item.date" placeholder="Event Date")
                        span.help-block(id="eventDate-helpBlock" ng-show="vm.validationError.errors['date'].kind") {{vm.validationError.errors['date'].message}}
    md-dialog-actions(layout="row")
        md-button(ng-click="vm.cancel()") Cancel
        md-button(ng-click="vm.addDocPart()") OK