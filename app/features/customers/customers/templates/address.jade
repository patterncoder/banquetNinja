md-dialog(aria-lable="Add Address")
    md-toolbar(layout-padding)
        div.md-tooolbar-tools
            h4 {{vm.dialogOptions.headerText}}
    md.dialog-content(layout-padding)
        div(style="min-width: 600px")
            form.form-horizontal(name="addDocPartForm")
                .form-group
                    label.col-md-3.control-label(for="addressType") Address Type
                    .col-md-9
                        label.radio-inline
                            input(type="radio", id="addressType" name="addressType",  ng-model="vm.item.addressType" value="home")
                            | Home
                        label.radio-inline
                            input(type="radio", id="addressType"  name="addressType", ng-model="vm.item.addressType" value="work")
                            | Work
                        label.radio-inline
                            input(type="radio", id="addressType"  name="addressType", ng-model="vm.item.addressType" value="other")
                            | Other
                .form-group(ng-class="{'has-error': vm.validationError.errors['address1'].kind }")
                    label.col-sm-3.control-label(for="address1") Address 1
                    div.col-sm-9
                        input.form-control(name="address1" ng-model="vm.item.address1" placeholder="Address Line 1")
                        span.help-block(id="address1-helpBlock" ng-show="vm.validationError.errors['address1'].kind") {{vm.validationError.errors['address1'].message}}
                .form-group(ng-class="{'has-error': vm.validationError.errors['address2'].kind }")
                    label.col-sm-3.control-label(for="address2") Address 2
                    div.col-sm-9
                        input.form-control(name="address2" ng-model="vm.item.address2" placeholder="Address Line 2")
                        span.help-block(id="address2-helpBlock" ng-show="vm.validationError.errors['address2'].kind") {{vm.validationError.errors['address2'].message}}
                .form-group(ng-class="{'has-error': vm.validationError.errors['city'].kind }")
                    label.col-sm-3.control-label(for="city") City
                    div.col-sm-9
                        input.form-control(name="city" ng-model="vm.item.city" placeholder="City")
                        span.help-block(id="city-helpBlock" ng-show="vm.validationError.errors['city'].kind") {{vm.validationError.errors['city'].message}}
                .form-group(ng-class="{'has-error': vm.validationError.errors['state'].kind }")
                    label.col-sm-3.control-label(for="state") State
                    div.col-sm-9
                        input.form-control(name="state" ng-model="vm.item.state" placeholder="State")
                        span.help-block(id="state-helpBlock" ng-show="vm.validationError.errors['state'].kind") {{vm.validationError.errors['state'].message}}
                .form-group(ng-class="{'has-error': vm.validationError.errors['zip'].kind }")
                    label.col-sm-3.control-label(for="zip") Postal Code
                    div.col-sm-9
                        input.form-control(name="zip" ng-model="vm.item.zip" placeholder="Postal Code")
                        span.help-block(id="zip-helpBlock" ng-show="vm.validationError.errors['zip'].kind") {{vm.validationError.errors['zip'].message}}
                .form-group
                    label.col-md-3.control-label(for="addressPrimary") Primary Address?
                    .col-md-9
                        label.radio-inline
                            input(type="radio" id="addressPrimary" name="addressPrimar" ng-model="vm.item.primary" value="true")
                            | True
                        label.radio-inline
                            input(type="radio" id="addressPrimary" name="addressPrimary" ng-model="vm.item.primary" value="false")
                            | False
    md-dialog-actions(layout="row")
        md-button(ng-click="vm.cancel()") Cancel
        md-button(ng-click="vm.addDocPart()") OK