md-dialog(aria-lable="Add Phone Number")
    md-toolbar(layout-padding)
        div.md-tooolbar-tools
            h4 {{vm.dialogOptions.headerText}}
    md.dialog-content(layout-padding)
        div(style="min-width: 600px")
            form.form-horizontal(name="addDocPartForm")
                .form-group
                    label.col-md-3.control-label(for="contactType") Contact Type
                    .col-md-9
                        label.radio-inline
                            input(type="radio", id="contactType" name="contactType",  ng-model="vm.item.contactType" value="home")
                            | Home
                        label.radio-inline
                            input(type="radio", id="contactType"  name="contactType", ng-model="vm.item.contactType" value="work")
                            | Work
                        label.radio-inline
                            input(type="radio", id="contactType"  name="contactType", ng-model="vm.item.contactType" value="cell")
                            | Cell
                        label.radio-inline
                            input(type="radio", id="contactType"  name="contactType", ng-model="vm.item.contactType" value="other")
                            | Other
                .form-group(ng-class="{'has-error': vm.validationError.errors['number'].kind }")
                    label.col-sm-3.control-label(for="number") Phone Number
                    div.col-sm-9
                        input.form-control(name="number" ng-model="vm.item.number" placeholder="Phone Number")
                        span.help-block(id="number-helpBlock" ng-show="vm.validationError.errors['number'].kind") {{vm.validationError['number'].message}}
                .form-group
                    label.col-md-3.control-label(for="phonePrimary") Primary Number?
                    .col-md-9
                        label.radio-inline
                            input(type="radio" id="phonePrimary" name="phonePrimary" ng-model="vm.item.primary" value="true")
                            | True
                        label.radio-inline
                            input(type="radio" id="phonePrimary" name="phonePrimary" ng-model="vm.item.primary" value="false")
                            | False
    md-dialog-actions(layout="row")
        md-button(ng-click="vm.cancel()") Cancel
        md-button(ng-click="vm.addDocPart()") OK