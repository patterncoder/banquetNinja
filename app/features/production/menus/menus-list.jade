div(flex="100")
    list-header
    table.table.table-responsive
        colgroup
            col(span="1")
            col(span="1")
            col.tableNav(span="1")
        thead
            th Menu
            th Description
            th.text-right
                button.btn.btn-primary.btn-xs(ng-click="vm.addItemDialog()") {{::vm.constructorArgs.addHeaderText}}
        tbody
            tr(ng-repeat="menuItem in vm.items | filter:searchText | orderBy:sortOrder")
                td {{::menuItem.name}}
                td {{::menuItem.description}}
                td.text-right
                    //button.btn.btn-primary.btn-xs(ng-click="vm.details(menuItem._id)") Edit
                    a(href="" ng-click="vm.details(menuItem._id)")
                        span.glyphicon.glyphicon-pencil
                    | &nbsp; | &nbsp;
                    a(href="" ng-click="vm.deleteItem(menuItem._id)")
                        span.glyphicon.glyphicon-remove
