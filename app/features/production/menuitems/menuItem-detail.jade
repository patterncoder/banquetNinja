div.md-dialog-fullscreen(layout="column" layout-fill)
    md-toolbar(layout="row")
        .md-toolbar-tools.tm-detailToolbar
            h3 
                span {{vm.tmMenuItemDocSvc.doc.name}} Detail
            span(flex)
            md-button(ng-click="vm.close()" aria-label="close")
                span.glyphicon.glyphicon-remove
    div(flex layout="row")
        // doc content
        div(flex="80" )
            md-content()
                div(layout-padding style="background-color:#f0f0f0")
                    form(name="vm.detailForm")
                        div(layout-gt-xs="row")
                                md-input-container.md-block
                                    label Menu Item Name
                                    input(ng-model="vm.tmMenuItemDocSvc.doc.name" )
                                md-input-container.md-block(flex-gt-sm)
                                    label Description
                                    input(ng-model="vm.tmMenuItemDocSvc.doc.description")
                div(layout-padding layout-fill)
                    md-tabs(md-border-bottom md-selected="vm.tabIndex")
                        md-tab(label="Categories")
                            div(layout="row" layout-padding)
                                div(flex=33)
                                    h3 Categories
                                    div(ng-repeat="item in vm.tmMenuItemDocSvc.doc.categories")
                                        div(layout="row")
                                            span  {{item}} 
                                            span(flex)
                                            a(href="" ng-click="vm.tmMenuItemDocSvc.removeCategory(item)")
                                                span.glyphicon.glyphicon-remove
                                div(flex=33)
                                    h3 Contact Types
                                    div(ng-repeat="item in vm.tmMenuItemDocSvc.doc.contactTypes")
                                        div(layout="row")
                                            span  {{item}} 
                                            span(flex)
                                            a(href="" ng-click="vm.tmMenuItemDocSvc.removeContactType(item)")
                                                span.glyphicon.glyphicon-remove
                                div(flex=33)
                                    h1 Dude you have errors
                                    p {{vm.tmMenuItemDocSvc.validationError}}
                                    a(href="" ng-click="vm.toggleRight()") Show nav
                        md-tab(label="Errors")
                            div(layout="row" layout-padding)
                                h1 Dude you have errors
                                p {{vm.tmMenuItemDocSvc.validationError}}
                        md-tab(label="Notes")
                            div(layout="row" layout-padding)
                                h1 Notes
                        md-tab(label="Pictures")
                            div(layout="row" layout-padding)
                                h1 Pictures
                        md-tab(label="Directions")
                            div(layout="row" layout-padding)
                                h1 Directions
        // selectors content
        div.md-border-left(flex="20" layout-padding style="background-color:#CCFFFF" )
            md-content(layout-padding style="background: transparent")
                div(ng-show="vm.tabIndex === 0")
                    categorylookups(tm-data-source="Lookups" doc-list="vm.tmMenuItemDocSvc.doc.categories" list="menuItemTags" doc-service-add-method="tmMenuItemDocSvc.addCategory")
                div(ng-show="vm.tabIndex === 0")
                    categorylookups(tm-data-source="Lookups" doc-list="vm.tmMenuItemDocSvc.doc.contactTypes" list="contactTags" doc-service-add-method="tmMenuItemDocSvc.addContactType")
