.detailForm
    detail-header
    .detailContent(layout="row" flex)
        div.detailLeftPanel(flex layout="column")
            div.detailLeftPanelContainer(layout-fill)
                div.detailTopPanel(layout-padding)
                    include ./tabs/top-panel.jade
                div.detailSection(layout-padding)
                    md-tabs(md-dynamic-height  layout="column" md-selected="vm.tabIndex")
                        md-tab( label="Descriptions")
                            include ./tabs/tab-descriptions.jade
                        md-tab( label="Menus")
                            include ./tabs/add-menus.jade
                div.insideDetailFooter(layout="row" layout-padding layout-align="start start")
        div.detailRightPanel(flex="20" ng-show="vm.tabIndex === 1" layout-padding)
            md-content(layout-padding style="background: transparent")
                div()
                    h3 Add Menu
                    label() Filter By Date 
                    select.form-control(ng-model="vm.rangeType")
                        option(value="before") Before 
                        option(value="after") After
                    select.form-control(ng-model="vm.selectedMonth", ng-options="month for month in vm.docSvc.months")
                        option(value="") Select Month
                    select.form-control(ng-model="vm.selectedYear", ng-options="hour for hour in vm.docSvc.years")
                        option(value="") Select Year
                    md-button.md-raised(ng-click="vm.docSvc.fltr({range: vm.rangeType, m: vm.selectedMonth, y: vm.selectedYear})") Filter 
                    br
                    br
                    label Results
                    br
                    div Add menus to this group
                    div(ng-repeat="item in vm.docSvc.displayedMenus")
                        a(href="" ng-click="vm.docSvc.addMenu(item)") 
                            span.glyphicon.glyphicon-circle-arrow-left 
                        span &nbsp; {{item.name}}
                    div
                        a(href="" ng-click="vm.docSvc.loadMore()") Load More
                            //- span.glyphicon.glyphicon-circle-arrow-left 
                        //- span &nbsp; Load More
                    //- lookups(tm-data-source="Lookups" doc-list="vm.tmMenuItemDocSvc.doc.categories" list="menuItemTags" doc-service-add-method="tmMenuItemDocSvc.addCategory")
                    //-     a(href="" ng-click="dCtrl.addItem(item)") 
                    //-         span.glyphicon.glyphicon-circle-arrow-left 
                    //-     span &nbsp; {{item}}
    detail-footer