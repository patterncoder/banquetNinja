div(flex="100")
    ///.breadcrumb Production > Menu Items
    legend Menu Groups
    .pull-right
        form.form-inline
            .form-group
                input.form-control(ng-model="searchText", placeholder="Filter")
            | &nbsp;
            .form-group.margin-left-med
                select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in vm.sortOptions")
    is-loading
    table.table.table-responsive
        colgroup
            col(span="1")
            col(span="1")
            col.tableNav(span="1")
        thead
            th Menu Group
            th Description
            th.text-right
                button.btn.btn-primary.btn-xs(ng-click="vm.addItemDialog()") Add Menu Group
        tbody
            tr(ng-repeat="item in vm.items | filter:searchText | orderBy:sortOrder")
                td {{::item.name}}
                td {{::item.description}}
                td.text-right
                    //button.btn.btn-primary.btn-xs(ng-click="vm.details(menuItem._id)") Edit
                    a(href="" ng-click="vm.details(item._id)")
                        span.glyphicon.glyphicon-pencil
                    | &nbsp; | &nbsp;
                    a(href="" ng-click="vm.deleteItem(item._id)")
                        span.glyphicon.glyphicon-remove
