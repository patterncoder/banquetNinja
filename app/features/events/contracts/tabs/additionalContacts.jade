ninja-grid(no-data-text="No additional contacts yet..." 
        grid-title="Additional Contacts" 
        doc-svc="vm.docSvc" 
        list="vm.docSvc.doc.additionalContacts" 
        create-method="addAdditionalContact" 
        update-method="" 
        delete-method="deleteAdditionalContact"
        add-toggle="vm.additionalContactTemplate"
        fields="{firstName: {input: 'text', header: 'First Name', order: 10, width: 15, type: 'string'}," + 
                " lastName: {input: 'text', header: 'Last Name', order: 15, width: 15, type: 'string'}," +
                " relationToCustomer: {input: 'text', header: 'Relation To Customer', order: 30, width: 30, type: 'string'}," +
                " email: {input: 'text', header: 'Email', order: 30, width: 15, type: 'string'}," +
                " cellPhone: {input: 'text', header: 'Cell Phone', order: 40, width: 10, type: 'string'}," +
                " homePhone: {input: 'text', header: 'Other Phone', order: 50, width: 10, type: 'string'}}")