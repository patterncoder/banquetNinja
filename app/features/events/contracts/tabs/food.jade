ninja-grid(no-data-text="No menu items yet..." 
        grid-title="Contract Menu Items" 
        doc-svc="vm.docSvc" 
        list="vm.docSvc.doc.menuItems" 
        create-method="addMenuItem" 
        update-method="" 
        delete-method="deleteMenuItem"
        add-toggle="vm.sideTab.menuItems"
        fields="{name: {input: 'text', header: 'Menu Item', order: 10, width: 20}," + 
                " description: {input: 'textarea', header: 'Description', order: 20, width: 50}," + 
                " quantity: {input: 'text', header: 'Quantity', order: 30, width: 10}," +
                " price: {input: 'text', header: 'Price', order: 40, width: 10}}")
                

