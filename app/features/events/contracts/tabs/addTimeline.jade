div(layout="row" layout-align="end start")
    md-button( ng-click="vm.sideTab.timeline = !vm.sideTab.timeline") Close

div(layout="column" )
    h3 Add New Event
    .form-group(flex="25")
        label.control-label(for="title") Start Time
        time-picker(field="vm.models.newEventStep.time")
    .form-group(flex="33")
        label.control-label(for="title") Duration
        input.form-control(ng-model="vm.models.newEventStep.duration" )
    .form-group(flex="33")
        label.control-label(for="title") Description
        input.form-control(ng-model="vm.models.newEventStep.description" )
    .form-group
        .btn.btn-primary(ng-click="vm.addEventStep()") Add Item


    