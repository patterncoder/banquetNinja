form(name="vm.detailForm")
    // div(layout-gt-xs="row" layout-padding)
div(flex layout="row")
    div(flex="80" align-content="flex-start" layout="column")
        div(layout="row")
            .form-group(flex="33")
                label.control-label(for="title") Event Name
                input.form-control(ng-model="vm.docSvc.doc.eventName" )
            .form-group(flex="66")
                label.control-label(for="description") Nature of Event
                input.form-control(ng-model="vm.docSvc.doc.natureOfEvent")
        div(layout="row")
            .form-group(flex="20")
                label.control-label(for="title") Date of Event
                p.input-group
                    input.form-control(type="text" uib-datepicker-popup="shortDate" ng-model="vm.docSvc.doc.eventDate" is-open="vm.status.datePickerOpen" close-text="Close")
                    span.input-group-btn
                        button.btn.btn-default(type="button" ng-click="vm.openDatePicker()")
                            i.glyphicon.glyphicon-calendar
            .form-group(flex="20")
                label.control-label(for="title") Start Time
                span(uib-dropdown auto-close="outsideClick" is-open="vm.status.timePickerOpen")
                    p.input-group
                        input.form-control(ng-model="vm.docSvc.doc.startTime" uib-datepicker-popup="shortTime")
                        span.input-group-btn
                            button.btn.btn-default(uib-dropdown-toggle type="button" id="dateDropDown" style="padding-left: 5px")
                                i.glyphicon.glyphicon-time
                            div(uib-dropdown-menu style="padding: 10px")
                                uib-timepicker(ng-model="vm.docSvc.doc.startTime")
                                a(href="" ng-click="vm.closeTimePicker()") Done
    div(flex="20" layout="column")
        div
            span(style="font-weight: bold") Room(s)&nbsp; 
                a(href="" ng-click="vm.addRooms()") +Add
        div()
            div.itemCard.itemCard-dark(layout="row" layout-align="start center" ng-repeat="item in vm.docSvc.doc.venue track by $index")
                div(flex="grow") {{item.name}}
                div(flex="grow")
                div.glyphicon.glyphicon-remove-circle( ng-click="vm.removeVenue($index)" style="margin-left: 5px;" )